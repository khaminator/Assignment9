@{
    ViewBag.Title = "Your Favorite Movies";
}

@model IEnumerable<Movies>

<h2> MOVIES</h2>

<div>
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>LentTo</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td class="text-center">
                    <form asp-action="Edit1" method="post">
                        <input type="hidden" name="MovieID" value="@x.MovieId" />
                        <button type="submit" class="btn btn-sm btn-danger">Edit</button>
                    </form>
                </td>
                <td class="text-center">
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="MovieId" value="@x.MovieId" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
            }

        </tbody>
    </table>

</div>


<div>
    Click <a asp-action="EnterFilm">Here to Enter Another Movie</a>
</div>